<%- include("partials/header") -%> 

<h1>Compose</h1>

<form action="/compose" method="POST">
    <div class="form-group">
        <div class="mb-3">
            <label for="postTitleInput" class="form-label">Title</label>
            <input type="text" class="form-control" name="postTitle" id="postTitleInput">
        </div>
        <div class="mb-3">
            <label for="postBodyInput" class="form-label">Post</label>
            <textarea class="form-control" name="postBody" id="postBodyInput" cols="30" rows="10"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
    
</form>

<%- include("partials/footer") -%>